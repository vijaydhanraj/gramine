loader.preload = "file:{{ gramine.libos }}"
libos.entrypoint = "cuse_client"
loader.log_level = "{{ log_level }}"
#loader.log_level = "all"

loader.env.LD_LIBRARY_PATH = "/lib:{{ arch_libdir }}:/usr{{ arch_libdir }}"

loader.insecure__use_cmdline_argv = true
loader.insecure__use_host_env = true

fs.mount.lib.type = "chroot"
fs.mount.lib.path = "/lib"
fs.mount.lib.uri = "file:{{ gramine.runtimedir() }}"

fs.mount.lib2.type = "chroot"
fs.mount.lib2.path = "{{ arch_libdir }}"
fs.mount.lib2.uri = "file:{{ arch_libdir }}"

fs.mount.lib3.type = "chroot"
fs.mount.lib3.path = "/usr{{ arch_libdir }}"
fs.mount.lib3.uri = "file:/usr{{ arch_libdir }}"

fs.mount.etc.type = "chroot"
fs.mount.etc.path = "/etc"
fs.mount.etc.uri = "file:/etc"

fs.mount.dev.type = "chroot"
fs.mount.dev.path = "/dev/foobar"
fs.mount.dev.uri = "dev:/dev/foobar"

sgx.debug = true
sgx.enclave_size = "256M"
sgx.thread_num = 4

sgx.ioctl_structs.cuse_ioctl_sizearg =  [ { size = 8, type = "inout" } ]

sgx.allowed_ioctls.CUSE_IOCTL_GET_SIZE.request = 0x80084500
sgx.allowed_ioctls.CUSE_IOCTL_GET_SIZE.struct  = "cuse_ioctl_sizearg"

sgx.allowed_ioctls.CUSE_IOCTL_SET_SIZE.request = 0x40084501
sgx.allowed_ioctls.CUSE_IOCTL_SET_SIZE.struct  = "cuse_ioctl_sizearg"

sgx.ioctl_structs.cuse_ioctl_rwarg = [
    { size = 8, type = "inout" },                   #offset
    { ptr = [ { size = "buf_size", type = "inout" } ] },          #buffer
    { size = 8, name = "buf_size", type = "out" },              #size
    { size = 8, type = "in" },                   #previous size
    { size = 8, type = "in" },                   #new size
]

sgx.allowed_ioctls.CUSE_IOCTL_READ.request = 0x4502
sgx.allowed_ioctls.CUSE_IOCTL_READ.struct  = "cuse_ioctl_rwarg"

sgx.allowed_ioctls.CUSE_IOCTL_WRITE.request = 0x4503
sgx.allowed_ioctls.CUSE_IOCTL_WRITE.struct  = "cuse_ioctl_rwarg"

sgx.trusted_files = [
  "file:cuse_client",
  "file:{{ gramine.runtimedir() }}/",
  "file:{{ arch_libdir }}/",
  "file:/usr{{ arch_libdir }}/",
]

sgx.allowed_files = [
  "file:/etc/nsswitch.conf",
  "file:/etc/host.conf",
  "file:/etc/resolv.conf",
  "file:/etc/ethers",
  "file:/etc/hosts",
  "file:/etc/group",
  "file:/etc/passwd",
  "file:/etc/gai.conf",
  "file:/etc/ssl/certs/ca-certificates.crt",
  "file:/etc/sgx_default_qcnl.conf",
]
